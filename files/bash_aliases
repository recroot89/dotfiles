# projects
alias paygety='cd ~/Projects/paygety-rails && nvim .'
alias exercism='cd ~/Projects/exercism && nvim .'
alias sandbox='cd ~/Projects/sandbox && nvim .'
alias bots='cd ~/Projects/bots && nvim .'
alias dotfiles='cd ~/Projects/dotfiles && nvim .'
alias evernow='cd ~/Projects/mobile-backend && nvim .'

# text editor
alias v.='nvim .'
alias v='nvim'
alias c='code .'

# git
alias gcod='git checkout development'
alias gc='git commit'
alias gpush='git push origin HEAD'
alias gpom='git pull --rebase origin master'
alias gpod='git pull --rebase origin development'
alias gbr='git branch | grep -v "master" | xargs git branch -D'
alias ghist='git log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short'
alias grss='git restore --staged'

# ruby on rails
alias wd='bin/webpack-dev-server'
alias rr='rails routes | grep'
alias rdbm='bin/rails db:migrate RAILS_ENV=development'
alias rdbr='rails db:drop db:create db:migrate db:fixtures:load'
alias irbs='irb --simple-prompt'
alias bi='bundle install --jobs 20 --retry 5'
alias bu='bundle update --jobs 20 --retry 5'

# docker
alias dps='docker ps'
alias di='docker images'
alias duon='docker update --restart=always'
alias duoff='docker update --restart=no'
# docker cleanup images
alias dcci='docker rmi $(docker images -f "dangling=true" -q) -f'

# docker-compose
alias dcb='docker-compose build'
alias dcu='docker-compose up'
alias dcd='docker-compose down'

### SYSADMIN ###

alias scan='sudo nmap -sP'
alias sysinfo='sudo inxi -Fx'
# show loaded and active services
alias shsrv='systemctl list-units --type=service'
# show all services
alias srvall='systemctl list-unit-files --type=service'

alias lla='ls -la'
alias ports='ss -lntu'
